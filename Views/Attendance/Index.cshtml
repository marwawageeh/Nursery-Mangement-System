@model List<Attendance>
<br />
<br />
<br />
<br />

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Instructor List</h2>
        <div>
            <a asp-action="add" asp-controller="attendance" class="btn btn-success me-2">
                <i class="fas fa-plus"></i> Create
            </a>
@*             <a asp-action="ExportToCsv" asp-controller="Instructor" class="btn btn-danger">
                <i class="fas fa-file-export"></i> Export
            </a> *@

        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Time</th>
                    <th>Student</th>
                    <th>Course</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AttendanceId</td>
                        <td>@item.Date</td>
                        <td>@item.Status</td> 
                        <td>@item.Time</td>
                        <td>@item.Trainee.Name</td>
                        <td>@item.Course.Name</td>
                        <td>
                            @* <a asp-action="Details" asp-controller="Instructor" asp-route-id="@item.ID" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-controller="Instructor" asp-route-id="@item.ID" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Instructor" asp-route-id="@item.ID"
                               onclick="return confirm('Are you sure you want to delete this item?')"
                               class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
