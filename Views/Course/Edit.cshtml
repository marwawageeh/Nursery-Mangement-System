@model Course

<br />
<br />
<br />
<br />

<div class="container my-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary mb-4">Edit Course</h2>

        <form method="post" asp-action="edit" asp-controller="course">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Course Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter course name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Degree" class="form-label">Degree</label>
                <input asp-for="Degree" class="form-control" placeholder="Enter degree" required />
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Min_Degree" class="form-label">Minimum Degree</label>
                <input asp-for="Min_Degree" class="form-control" placeholder="Enter minimum degree" required />
                <span asp-validation-for="Min_Degree" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Houres" class="form-label">Hours</label>
                <input asp-for="Houres" class="form-control" placeholder="Enter hours" required />
                <span asp-validation-for="Houres" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

<script src="/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
