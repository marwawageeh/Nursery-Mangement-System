@model List<Course>

<br />
<br />
<br />
<br />


<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Course List</h2>
        <div>
            <a asp-action="add" asp-controller="course" class="btn btn-success me-2">
                <i class="fas fa-plus"></i> Create
            </a>
            <a asp-action="ExportToCsv" asp-controller="course" class="btn btn-danger">
                <i class="fas fa-file-export"></i> Export
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Degree</th>
                    <th>Min Degree</th>
                    <th>Hours</th>
                    <th>Department</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Degree</td>
                        <td>@item.Min_Degree</td>
                        <td>@item.Houres</td>
                        <td>@item.department.Name</td>
                        <td>
                            <a asp-action="Details" asp-controller="course" asp-route-id="@item.ID" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-controller="course" asp-route-id="@item.ID" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-controller="course" asp-route-id="@item.ID"
                               onclick="return confirm('Are you sure you want to delete this item?')"
                               class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
