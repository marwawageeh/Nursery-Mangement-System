@model Department

<br />
<br />
<br />
<br />

<div class="container my-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary mb-4">Add New Department</h2>

        <form method="post" action="/department/SaveADD">
            <div class="mb-3">
                <label for="Name" class="form-label">Department Name</label>
                <input type="text" id="Name" name="Name" value="@Model?.Name" class="form-control" placeholder="Enter department name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Manager" class="form-label">Manager</label>
                <input type="text" id="Manager" name="Manger" value="@Model?.Manger" class="form-control" placeholder="Enter manager name" required />
                <span asp-validation-for="Manger" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-save"></i> Create Department
                </button>
            </div>
        </form>
    </div>
</div>

<script src="/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
