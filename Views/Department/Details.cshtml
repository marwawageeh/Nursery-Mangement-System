@model Department

<br />
<br />

<div class="container my-5">
    <div class="card shadow-lg p-4">
        <div class="card-header" style="background-color: #5D4037; color: white; text-align: center;">
            <h3 class="mb-0">Department Details</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th class="w-25" style="color: #4E342E;">Department ID</th>
                        <td>@Model.ID</td>
                    </tr>
                    <tr>
                        <th style="color: #4E342E;">Department Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th style="color: #4E342E;">Manager</th>
                        <td>@Model.Manger</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" asp-controller="Department" class="btn text-white px-4" style="background-color: #6D4C41;">
                <i class="fas fa-arrow-left"></i> Back to Departments
            </a>
        </div>
    </div>
</div>
