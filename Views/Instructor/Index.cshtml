@model List<Instructor>
<br />
<br />
<br />
<br />

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Instructor List</h2>
        <div>
            <a asp-action="add" asp-controller="Instructor" class="btn btn-success me-2">
                <i class="fas fa-plus"></i> Create
            </a>
            <a asp-action="ExportToCsv" asp-controller="Instructor" class="btn btn-danger">
                <i class="fas fa-file-export"></i> Export
            </a>
            <a href="https://docs.google.com/forms/d/1X4YKniMaeeyDofG1FagIEiCydOMDN95bc5NCfb6LjgQ/edit" target="_blank" class="btn btn-primary px-4">
                    <i class="fas fa-plus-circle"></i> نشر استمارة التوظيف
                </a>

            <a href="https://docs.google.com/forms/d/1X4YKniMaeeyDofG1FagIEiCydOMDN95bc5NCfb6LjgQ/edit#responses" target="_blank" class="btn btn-info px-4 ms-3">
                    <i class="fas fa-chart-bar"></i> عرض الردود
                </a>


        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>Address</th>
                    <th>Image</th>
                    <th>Department</th>
                    <th>Course</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Salary.ToString("C")</td> <!-- لإظهار الراتب بتنسيق العملة -->
                        <td>@item.Address</td>
                        <td>
                            <img src="/Images/@item.ImageURL" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;" />
                        </td>
                        <td>@item.department.Name</td>
                        <td>@item.course.Name</td>
                        <td>
                            <a asp-action="Details" asp-controller="Instructor" asp-route-id="@item.ID" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-controller="Instructor" asp-route-id="@item.ID" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-controller="Instructor" asp-route-id="@item.ID"
                               onclick="return confirm('Are you sure you want to delete this item?')"
                               class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
