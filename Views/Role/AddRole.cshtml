@model mvc_project.ModelView.RoleViewModel

<br />
<br />
<br />
<br />

@{
    ViewData["Title"] = "Add Role";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center text-white" style="background-color: #6D4C41;">
                    <h3 class="mb-0">Add New Role</h3>
                </div>
                <div class="card-body">
                    <form asp-action="SaveRole">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="RoleName" class="form-label fw-bold">Role Name</label>
                            <input asp-for="RoleName" class="form-control" placeholder="Enter role name" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn text-white" style="background-color: #6D4C41;">
                                <i class="fas fa-plus"></i> Create Role
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
