@model List<Trainee>

<br />
<br />
<br />
<br />

<div class="container my-5">
    <!-- عنوان الصفحة -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Trainee List</h2>
        <div>
            <a asp-action="Add" asp-controller="Trainee" class="btn btn-success">
                <i class="fas fa-user-plus"></i> Add Trainee
            </a>
            <a asp-action="Add" asp-controller="CrsResult" class="btn btn-secondary">
                <i class="fas fa-graduation-cap"></i> Add Grades
            </a>
            <a asp-action="Add" asp-controller="Attendance" class="btn btn-dark">
                <i class="fas fa-calendar-check"></i> Add Attendance
            </a>

            <a asp-action="ExportToCsv" asp-controller="Trainee" class="btn btn-danger">
                <i class="fas fa-file-export"></i> Export
            </a>
            <a href="https://docs.google.com/forms/u/2/?pli=1" target="_blank" class="btn btn-primary">
                <i class="fas fa-file-alt"></i> Employment Form
            </a>
            <a href="https://docs.google.com/forms/d/1Wvyj2LKQs04NvRYJ-jOZk1dF4nlbIxmuBGAjq8646U0/edit#responses" target="_blank" class="btn btn-info">
                <i class="fas fa-chart-bar"></i> View Responses
            </a>
        </div>
    </div>

    <!-- تصميم الجدول -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Grade</th>
                    <th>Address</th>
                    <th>Image</th>
                    <th>Department</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Grade</td>
                        <td>@item.Address</td>
                        <td>
                            <img src="/Images/@item.ImageURL" class="rounded-circle border" style="width: 70px; height: 70px; object-fit: cover;" />
                        </td>
                        <td>@item.department.Name</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-controller="Trainee" asp-route-id="@item.ID" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-controller="Trainee" asp-route-id="@item.ID" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-controller="Trainee" asp-route-id="@item.ID"
                                   onclick="return confirm('Are you sure you want to delete this item?')"
                                   class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                                <a asp-action="PaymentHistory" asp-controller="Payment" asp-route-traineeId="@item.ID" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-credit-card"></i> <!-- استخدم أي أيقونة مناسبة للدفع -->
                                </a>


                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
