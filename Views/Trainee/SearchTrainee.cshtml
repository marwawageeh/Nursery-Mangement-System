<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <div class="card-header text-center text-white" style="background-color: #8B7355;">
                    <h3 class="mb-0">Search for Trainee</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="nationalId" class="form-label fw-bold">Enter National ID</label>
                            <input type="number" id="nationalId" name="nationalId" class="form-control" placeholder="Enter National ID" required />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn text-white px-4" style="background-color: #6D4C41;">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Alert for Error -->
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger mt-3 text-center">@ViewBag.ErrorMessage</div>
            }
        </div>
    </div>
</div>
